{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "reflect-metadata",
      "jest",
      "@types/jest"
    ],
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "server.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files":["./src/@types/express/index.d.ts", "./src/domain/user/IUserEntity.ts"]
}
